#ifndef ENEMY_H
#define ENEMY_H

#include "oslib/osspriteop.h"

typedef struct Level Level;

typedef struct Shellcreeper
{
	osspriteop_header *stillFrame;
	osspriteop_header *walk0Frame;
	osspriteop_header *walk1Frame;
	osspriteop_header *curFrame;
	int frame;
	int lastWalk;
	osspriteop_trans_tab *transTab;
	float x;
	float y;
	float width;
	float height;
	float xSpeed;
	float xMaxSpeed;
	float ySpeed;
	char facing;
	int isFalling;
	int isOnPlat;
}
Shellcreeper;

void updateShellcreeperAnimation(Shellcreeper *shellcreeper);
void updateShellcreeper(Shellcreeper *shellcreeper, Level *level, osspriteop_area *area);
void scPlatCollision(Shellcreeper *shellcreeper, Level *level);

#endif