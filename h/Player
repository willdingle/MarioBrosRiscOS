#ifndef PLAYER_H
#define PLAYER_H

#include "oslib/osspriteop.h"
#include "Level.h"

typedef struct Player
{
	osspriteop_header *stillFrame;
	osspriteop_header *run0Frame;
	osspriteop_header *accFrame;
	osspriteop_header *run1Frame;
	osspriteop_header *jumpFrame;
	osspriteop_header *curFrame;
	int frame;
	osspriteop_trans_tab *mainTransTab, *jumpTransTab, *curTransTab;
	float x;
	float y;
	float width;
	float height;
	float xSpeed;
	float xAcc;
	float xMaxSpeed;
	float ySpeed;
	char facing;
	int isJumping;
	int isOnPlat;
	int beenHit;
}
Player;

typedef struct KeyCodes
{
	const int left;
	const int right;
	const int x;
}
KeyCodes;

typedef struct GameInfo
{
	const float gravity;
}
GameInfo;

void enemyCollision(Player *mario, Level *level);
void platCollision(Player *mario, Level *level, int oldX, int oldY);
void updatePlayerAnimation(Player *mario);
void updatePlayer(Player *mario, Level *level, osspriteop_area *area);

#endif