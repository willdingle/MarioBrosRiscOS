#ifndef SPRITES_H
#define SPRITES_H

#include "oslib/osspriteop.h"
#include "oslib/os.h"
#include "oslib/colourtrans.h"

#include <stdio.h>

typedef struct Sprite
{
	osspriteop_header *stillFrame;
	osspriteop_header *run0Frame;
	osspriteop_header *accFrame;
	osspriteop_header *run1Frame;
	osspriteop_header *jumpFrame;
	osspriteop_header *curFrame;
	int frame;
	osspriteop_trans_tab *transTab;
	float x;
	float y;
	float xSpeed;
	float xAcc;
	float xMaxSpeed;
	float ySpeed;
	char facing;
	int isJumping;
}
Sprite;

osspriteop_area* loadSpriteFile(const char *filename, int *sizePoint, FILE *logFile);

void selectSprite(
	Sprite *sprite,
	const char *spriteName,
	const int numOfFrames,
	osspriteop_area *area,
	int size,
	os_factors *factors,
	int xEigFactor,
	int yEigFactor,
	FILE *logFile
);

#endif