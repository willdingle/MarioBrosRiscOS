typedef struct Sprite
{
	osspriteop_header *frame1;
	osspriteop_header *frame2;
	osspriteop_header *frame3;
	osspriteop_header *frame4;
	osspriteop_header *curFrame;
	int frame;
	osspriteop_trans_tab *transTab;
	int x;
	int y;
	int xDir;
}
Sprite;

osspriteop_area* loadSpriteFile(const char *filename, int *sizePoint, FILE *logFile);

void selectSprite(
	Sprite *sprite,
	const char *spriteName,
	const int numOfFrames,
	osspriteop_area *area,
	int size,
	os_factors *factors,
	int xEigFactor,
	int yEigFactor,
	FILE *logFile
);