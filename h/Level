#ifndef LEVEL_H
#define LEVEL_H

#include "oslib/osspriteop.h"
#include <stdio.h>

#include "Enemy.h"

typedef struct PlatformInfo
{
	float x;
	float y;
	float width;
	float height;
}
PlatformInfo;

enum PlatRow
{
	TOP_LEFT,
	TOP_RIGHT,
	MIDDLE_LEFT,
	MIDDLE_RIGHT,
	MIDDLE,
	BOTTOM_LEFT,
	BOTTOM_RIGHT
};

typedef struct Level
{
	int levelNum;
	osspriteop_header *floor;
	osspriteop_header *pipeBottom;
	osspriteop_header *pipeTop;
	osspriteop_header *platTile;
	osspriteop_header *platMoveTiles[3];
	osspriteop_trans_tab *transTab;
	
	int platSize;
	PlatformInfo plats[8];
	enum PlatRow platRow;
	int platSquare;
	
	Shellcreeper *shellcreepers;
	int numOfShellcreepers;
}
Level;

enum GameState
{
	MAIN_MENU,
	LEVEL_INTRO,
	PLAYING,
	POINTS_SCREEN,
	GAME_OVER,
	NAME_SCREEN
};

void initLevel(
	Level *level,
	osspriteop_area *area,
	int size,
	FILE *logFile
);

#endif